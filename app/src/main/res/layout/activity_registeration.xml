<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerationActivity">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="400px"
            android:background="#472C77"
            android:gravity="center"
            android:text="Register"
            android:textColor="@color/white"
            android:textSelectHandleLeft="@color/black"
            android:textSize="72dp" />

        <EditText
            android:id="@+id/EditText1"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_margin="30px"
            android:layout_marginTop="30px"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingLeft="22px"
            android:textColor="#673AB7"
            android:textColorHighlight="@color/purple_500"
            android:textColorHint="#6237AE"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_margin="30px"
            android:layout_marginTop="30px"
            android:drawableLeft="@android:drawable/stat_sys_speakerphone"
            android:drawingCacheQuality="auto"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="#673AB7"
            android:textColorHint="#6237AE"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_margin="30px"
            android:layout_marginTop="30px"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPostalAddress"
            android:paddingLeft="22px"
            android:textColor="#673AB7"
            android:textColorHint="#6237AE"
            android:textSize="34sp"
            />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:layout_marginTop="30px"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="22px"
            android:textColor="#673AB7"
            android:textColorHint="#6237AE"
            android:textSize="34sp"
            />
        <Button
            android:id="@+id/button"
            android:layout_width="391dp"
            android:layout_height="71dp"
            android:layout_margin="30px"
            android:layout_marginTop="30px"
            android:text="REGISTER"
            android:textSize="24sp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>