<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hypertensives_foodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Hypertensives Food"
            android:textColor="#0B0A0A"
            android:textColorHint="#131313"
            android:textSize="34sp" />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="700dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_categoriy_diabits"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:background="#8897EC"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="187dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/diabets_food_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:gravity="center"
                            android:text="v e g g i e s"
                            android:textColor="#101010"
                            android:textSize="34sp" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="157dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:progressBackgroundTint="@color/purple_500"
                            android:progressTint="@color/teal_200"
                            android:rating="3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:gravity="center"
                            android:text="Decreasing sodum make is a well_establishd"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageButton
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"


                            app:srcCompat="@drawable/baseline_favorite_border_24" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:background="#86DDD5"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="187dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/diabets_food_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:gravity="center"
                            android:text="l e n t i l s "
                            android:textColor="#101010"
                            android:textSize="34sp" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="157dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:progressBackgroundTint="@color/purple_500"
                            android:progressTint="@color/teal_200"
                            android:rating="3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:gravity="center"
                            android:text="Decreasing sodum make is a well_establishd"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageButton
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"


                            app:srcCompat="@drawable/baseline_favorite_border_24" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:background="#CDDC39"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="187dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fitness_food_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:gravity="center"
                            android:text="B e n g a l "
                            android:textColor="#101010"
                            android:textSize="34sp" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="157dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:progressBackgroundTint="@color/purple_500"
                            android:progressTint="@color/teal_200"
                            android:rating="3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:gravity="center"
                            android:text="when you exercise reguiary you need more protin "
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageButton
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"


                            app:srcCompat="@drawable/baseline_favorite_border_24" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">




        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>