<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fitness_foodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Fitness Food"
            android:textColor="#0B0A0A"
            android:textColorHint="#131313"
            android:textSize="34sp" />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="666dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_categoriy_diabits"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:background="#F49678"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="187dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fitness_food_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:gravity="center"
                            android:text="Chicken "
                            android:textColor="#101010"
                            android:textSize="34sp" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="157dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:progressBackgroundTint="@color/purple_500"
                            android:progressTint="@color/teal_200"
                            android:rating="3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:gravity="center"
                            android:text="when you exercise regularly you need protein "
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageButton
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"


                            app:srcCompat="@drawable/baseline_favorite_border_24" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:background="#E2EF64"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="187dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fitness_food_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:gravity="center"
                            android:text="Banana"
                            android:textColor="#101010"
                            android:textSize="34sp" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="157dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:progressBackgroundTint="@color/purple_500"
                            android:progressTint="@color/teal_200"
                            android:rating="3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:gravity="center"
                            android:text="Don't have much time before you head to the gym"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageButton
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"


                            app:srcCompat="@drawable/baseline_favorite_border_24" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:background="#76E17B"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="187dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fitness_food_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:gravity="center"
                            android:text="Burger"
                            android:textColor="#101010"
                            android:textSize="34sp" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="157dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:progressBackgroundTint="@color/purple_500"
                            android:progressTint="@color/teal_200"
                            android:rating="3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:gravity="center"
                            android:text="whether you same time try a meat free meat or stick"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageButton
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"


                            app:srcCompat="@drawable/baseline_favorite_border_24" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>